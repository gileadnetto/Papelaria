<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_busca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gilead.papelaria.BuscaActivity"
    tools:showIn="@layout/app_bar_busca">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="12dp">


            <EditText
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
               android:hint="Busca"
                android:ems="10"
                android:id="@+id/searchView"
                android:background="@drawable/screen_border"
                />

            <Button
                android:background="#00fff9f9"
                android:drawableTop="@drawable/ic_barras"
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_alignBottom="@+id/searchView"
                android:layout_alignParentEnd="true"
                android:onClick="escanear"/>



        </RelativeLayout>


        <ListView
            android:id="@+id/listabusca"
            android:choiceMode="multipleChoice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"        >
        </ListView>

    </LinearLayout>
</RelativeLayout>
